{
  "description": "Demonstrating webRequests",
  "manifest_version": 2,
  "name": "hook-search",
  "version": "0.0.1",
  "developer": {
    "name": "sk",
    "url": "https://bitbucket.org/sk_0520/hook-search/"
  },
  "icons": {
    "48": "resources/icon.svg",
    "96": "resources/icon.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "script/common.js",
      "script/redirect-google.js",
      "script/redirect-bing.js",
      "script/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search?*"
      ],
      "js": [
        "script/common.js",
        "script/content.js",
        "script/content-google.js"
      ],
      "css": [
        "style/content.css"
      ]
    },
    {
      "matches": [
        "*://*.bing.com/search?*"
      ],
      "js": [
        "script/common.js",
        "script/content.js",
        "script/content-bing.js"
      ],
      "css": [
        "style/content.css"
      ]
    }
  ],
  "options_ui": {
    "page": "view/options.html"
  }
}