{
  "version": "package.scripts.sync-version",
  "name": "search-hook",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "developer": {
    "name": "sk",
    "url": "https://bitbucket.org/sk_0520/search-hook/"
  },
  "default_locale": "ja",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search?*"
      ],
      "js": [
        "content-google.loader.js"
      ],
      "css": [
        "content-google.css"
      ]
    },
    {
      "matches": [
        "*://*.bing.com/search?*"
      ],
      "js": [
        "content-bing.loader.js"
      ],
      "css": [
        "content-bing.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  }
}