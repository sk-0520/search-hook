fieldset
  legend(data-locale="optionsHideItemTitle") [非表示設定]
  p
    span(data-locale="optionsHideItemDescriptionUse") [ホスト名、パス、クエリ部分を比較に使用します。]
    br
    span(data-locale="optionsHideItemDescriptionIgnore") [プロトコル、ユーザー、パスワード、ポート番号は無視されます。]
  table.list
    thead
      tr
        th(data-locale="optionsHideItemHeaderWord") [非表示対象ワード]
        th(data-locale="optionsHideItemHeaderMatch") [比較方法]
        th(data-locale="commonEnabled") [有効]
        th(data-locale="commonRemove") [削除]
    tbody#view-hide-host-list
      template
        tr(name="view-hide-item-group")
          td
            input(name="view-hide-item-host" type="text")
          td
            ul.horizontal
              li
                select(name="view-hide-item-match-kind")
                  option(value="partial" data-locale="matchKindPartial") [部分一致]
                  option(value="forward" data-locale="matchKindForward") [前方一致]
                  option(value="perfect" data-locale="matchKindPerfect") [完全一致]
                  option(value="regex"   data-locale="matchKindRegex")   [正規表現]
              li
                label
                  input(name="view-hide-item-match-case" type="checkbox")
                  img.icon(src="./case-sensitive.svg" data-locale="@EMPTY" data-locale-attribute-title="commonCaseSensitive")
          td
            ul.horizontal
              li
                label(data-locale="@EMPTY" data-locale-attribute-title="commonServiceGoogle")
                  input(name="view-hide-item-service-google" type="checkbox")
                  img.icon(src="./service-icon-google.svg")
              li
                label(data-locale="@EMPTY" data-locale-attribute-title="commonServiceBing")
                  input(name="view-hide-item-service-bing" type="checkbox")
                  img.icon(src="./service-icon-bing.svg")
          td
            button(name="view-hide-item-remove" data-locale="commonRemove") [削除]
      // script
    tfoot.input
      tr
        td
          input#view-input-hide-host(type="text")
        td
          ul.horizontal
            li
              select#view-input-hide-match-kind
                  option(value="partial" selected data-locale="matchKindPartial") [部分一致]
                  option(value="forward" data-locale="matchKindForward") [前方一致]
                  option(value="perfect" data-locale="matchKindPerfect") [完全一致]
                  option(value="regex"   data-locale="matchKindRegex")   [正規表現]
            li
              label
                input#view-input-hide-match-case(type="checkbox")
                img.icon(src="./case-sensitive.svg" data-locale="@EMPTY" data-locale-attribute-title="commonCaseSensitive")
        td
          ul.horizontal
            li
              label(data-locale="@EMPTY" data-locale-attribute-title="commonServiceGoogle")
                input#view-input-is-enabled-google(type="checkbox" checked)
                img.icon(src="./service-icon-google.svg")
            li
              label(data-locale="@EMPTY" data-locale-attribute-title="commonServiceBing")
                input#view-input-is-enabled-bing(type="checkbox" checked)
                img.icon(src="./service-icon-bing.svg")
        td
          button#command-view-add-hide-item(type="button" data-locale="commonAdd") [追加]
