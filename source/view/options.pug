doctype html
html
  head
    meta(charset="utf-8")
    link(rel="stylesheet" href="../style/options.scss")
  body
    form.setting.WE___search-hook-_-_-locale-root
      fieldset#service
        legend
          span(data-locale="optionsServiceTitle") [検索エンジン基本設定]
        ul
          li
            label
              input#service-is-enabled-google(type="checkbox")
              span(data-locale="commonServiceGoogle") [Google]
            table
              tr
                td
                  label(for="service-google-search-count")
                    span(data-locale="optionsServiceGoogleSearchCount") [検索数]
                td
                  input#service-google-search-count(type="number" min="10" max="100" step="10")
              tr
                td 
                  span(data-locale="optionsServiceGoogleSearchSafe") [セーフサーチ]
                td
                  label
                    input#service-google-search-safe(type="checkbox")
                    span(data-locale="commonEnabled") [有効]
          li
            label
              input#service-is-enabled-bing(type="checkbox")
              span(data-locale="commonServiceBing") [Bing]

      fieldset
        legend(data-locale="optionsNotItemTitle") [検索除外]
        table
          thead
            tr
              th(data-locale="optionsNotItemHeaderWord") [除外ワード]
              th(data-locale="commonEnabled") [有効]
              th(data-locale="commonRemove") [削除]
          tbody#engine-not-word-list
            template
              tr(name="engine-not-item-group")
                td
                  input(name="engine-not-item-word" type="text")
                td
                  ul.horizontal
                    li
                      label
                        input(name="engine-not-item-service-google", type="checkbox")
                        | google
                    li
                      label
                        input(name="engine-not-item-service-bing" type="checkbox")
                        | bing
                td
                  button(name="engine-not-item-remove" data-locale="commonRemove") [削除]
          tfoot.input
            tr
              th
                input#engine-input-not-word(type="text")
              th
                ul.horizontal
                  li
                    label
                      input#engine-input-is-enabled-google(type="checkbox" checked)
                      | google
                  li
                    label
                      input#engine-input-is-enabled-bing(type="checkbox" checked)
                      | bing
              th
                button#command-engine-add-not-item(type="button" data-locale="commonAdd") add

      fieldset
        legend [view] hide host/path/query
        p
          | use: HOST, PATH, QUERY
          br
          |                 ignore: PROTOCOL, USER, PASSWORD, PORT
        table
          thead
            tr
              th host
              th match
              th enabled
              th remove
          tbody#view-hide-host-list
            template
              tr(name="view-hide-item-group")
                td
                  input(name="view-hide-item-host" type="text")
                td
                  ul.horizontal
                    li
                      select(name="view-hide-item-match-kind")
                        option(value="partial") partial
                        option(value="forward") forward
                        option(value="perfect") perfect
                        option(value="regex") regex
                    li
                      label
                        input(name="view-hide-item-match-case" type="checkbox")
                        | case
                td
                  ul.horizontal
                    li
                      label
                        input(name="view-hide-item-service-google", type="checkbox")
                        | google
                    li
                      label
                        input(name="view-hide-item-service-bing", type="checkbox")
                        | bing
                td
                  button(name="view-hide-item-remove") remove
            // script
          tfoot.input
            tr
              th
                input#view-input-hide-host(type="text")
              th
                ul.horizontal
                  li
                    select#view-input-hide-match-kind
                      option(value="partial" checked) partial
                      option(value="forward") forward
                      option(value="perfect") perfect
                      option(value="regex") regex
                  li
                    label
                      input#view-input-hide-match-case(type="checkbox")
                      | case
              th
                ul.horizontal
                  li
                    label
                      input#view-input-is-enabled-google(type="checkbox" checked)
                      | google
                  li
                    label
                      input#view-input-is-enabled-bing(type="checkbox" checked)
                      | bing
              th
                button#command-view-add-hide-item(type="button") add
      fieldset
        legend [view] import
        p
          strong TODO
          | , reserve permissions: <all_urls>
      button(type="submit") save
    script(src="../script/options/options.loader.ts")
