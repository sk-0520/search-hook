{
  "name": "hook-search",
  "version": "1.0.0",
  "description": "",
  "config": {
    "PLATFORM_FIREFOX": "firefox",
    "OUTPUT_DIR_NAME": "./output",
    "OUTPUT_BUILD_DIR_NAME": "build",
    "OUTPUT_ARTIFACTS_DIR_NAME": "artifacts"
  },
  "scripts": {
    "manifest:firefox": "cross-var cp-cli ./source/$npm_package_config_PLATFORM_FIREFOX.json $npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME/manifest.json",
    "browser:firefox": "cross-var web-ext run --source-dir=$npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME --start-url about:debugging about:addons",
    "prebrowser:firefox-sk": "mkdirp X:\\fx",
    "browser:firefox-sk": "npm run browser:firefox -- --keep-profile-changes --firefox-profile=X:\\fx ",
    "lint:firefox": "cross-var web-ext lint --source-dir=$npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME",
    "build:firefox": "cross-var web-ext build --source-dir=$npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME --artifacts-dir=$npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_ARTIFACTS_DIR_NAME --overwrite-dest",
    "compile:core": "parcel build --public-url ./ ./source/view/options.pug ./source/view/background.pug ./source/script/content/content-google-action.ts",
    "watch:core": "  parcel watch --public-url ./ ./source/view/options.pug ./source/view/background.pug ./source/script/content/content-google-action.ts",
    "compile:firefox": "cross-var npm run compile:core -- --out-dir $npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME",
    "watch:firefox": "cross-var npm run watch:core -- --out-dir $npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME",
    "clean:firefox": "cross-var rimraf $npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME",
    "debug:firefox": "npm run manifest:firefox & run-p watch:firefox browser:firefox",
    "debug:firefox-sk": "npm run manifest:firefox & run-p watch:firefox browser:firefox-sk"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/sk_0520/search-hook.git"
  },
  "author": "sk",
  "license": "GPLv3",
  "homepage": "https://bitbucket.org/sk_0520/search-hook#readme",
  "devDependencies": {
    "cp-cli": "^1.1.2",
    "cross-var": "^1.1.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.10.3",
    "pug": "^2.0.3",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.3",
    "web-ext": "^2.9.1",
    "web-ext-types": "^2.3.0"
  }
}
