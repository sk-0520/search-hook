{
  "name": "hook-search",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "manifest:firefox": "cp-cli ./source/firefox.json ./dist/manifest.json",
    "browser:firefox": "web-ext run --source-dir=./dist --start-url about:debugging about:addons",
    "prebrowser:firefox-sk": "mkdirp X:\\fx",
    "browser:firefox-sk": "npm run browser:firefox -- --keep-profile-changes --firefox-profile=X:\\fx ",
    "lint:firefox": "web-ext lint --source-dir=./dist",
    "build:firefox": "web-ext build --source-dir=./dist --artifacts-dir=./artifacts/firefox --overwrite-dest",
    "compile:core:options": "parcel build --public-url . ./source/view/options.pug",
    "compile:core:background": "parcel build --public-url . ./source/view/background.pug",
    "compile:core:content-google": "parcel build --public-url . ./source/script/content/content-google-action.ts",
    "watch:core:options": "parcel watch --public-url . ./source/view/options.pug",
    "watch:core:background": "parcel watch --public-url . ./source/view/background.pug",
    "watch:core:content-google": "parcel watch --public-url . ./source/script/content/content-google-action.ts",
    "compile:firefox": "npm-run-all --parallel compile:core:*",
    "watch:firefox": "npm-run-all --parallel watch:core:*",
    "clean:firefox": "rimraf ./dist",
    "debug:firefox": "npm run manifest:firefox & npm-run-all --parallel watch:firefox browser:firefox",
    "debug:firefox-sk": "npm run manifest:firefox & npm-run-all --parallel watch:firefox browser:firefox-sk"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/sk_0520/search-hook.git"
  },
  "author": "sk",
  "license": "GPLv3",
  "homepage": "https://bitbucket.org/sk_0520/search-hook#readme",
  "devDependencies": {
    "cp-cli": "^1.1.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.10.3",
    "pug": "^2.0.3",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.3",
    "web-ext": "^2.9.1",
    "web-ext-types": "^2.3.0"
  }
}
