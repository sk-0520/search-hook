{
  "name": "hook-search",
  "version": "1.0.0",
  "description": "",
  "config": {
    "PLATFORM_DIR_NAME": "./platform",
    "PLATFORM_FIREFOX": "firefox",
    "OUTPUT_DIR_NAME": "./output",
    "OUTPUT_BUILD_DIR_NAME": "build",
    "OUTPUT_ARTIFACTS_DIR_NAME": "artifacts"
  },
  "scripts": {
    "manifest:firefox": "cross-var cp-cli $npm_package_config_PLATFORM_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX.json $npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME/manifest.json",
    "debug": "web-ext run --source-dir=source  --start-url about:debugging about:addons",
    "debug-sk": "mkdirp X:\\fx & web-ext run --source-dir=source --start-url about:debugging about:addons --keep-profile-changes --firefox-profile=X:\\fx ",
    "lint": "web-ext lint --source-dir=source",
    "build": "web-ext build --source-dir=source --artifacts-dir=artifacts --overwrite-dest",
    "compile:options:core": "parcel build --public-url . ./source/view/options.pug",
    "compile:options:firefox": "cross-var npm run compile:options:core -- --out-dir $npm_package_config_OUTPUT_DIR_NAME/$npm_package_config_PLATFORM_FIREFOX/$npm_package_config_OUTPUT_BUILD_DIR_NAME"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/sk_0520/search-hook.git"
  },
  "author": "sk",
  "license": "GPLv3",
  "homepage": "https://bitbucket.org/sk_0520/search-hook#readme",
  "devDependencies": {
    "cp-cli": "^1.1.2",
    "cross-var": "^1.1.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.10.3",
    "pug": "^2.0.3",
    "typescript": "^3.1.3",
    "web-ext": "^2.9.1",
    "web-ext-types": "^2.3.0"
  }
}
